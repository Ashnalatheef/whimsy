source 'https://rubygems.org'

# lib needs these at run-time
gem 'json'
gem 'nokogiri'
gem 'rake'
gem 'ruby-ldap'
wunderbar_version = File.read('/srv/whimsy/wunderbar.version').chomp
gem 'wunderbar', wunderbar_version
gem 'pdf-reader'

# For Travis testing
group :test do
  gem 'whimsy-asf', path: File.expand_path('..', __dir__)
  gem 'rspec'
end
